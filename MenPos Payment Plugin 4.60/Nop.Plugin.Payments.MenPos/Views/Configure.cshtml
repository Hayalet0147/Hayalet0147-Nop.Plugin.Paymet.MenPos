                            <span asp-validation-for="ClientCode"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-label asp-for="ClientUsername" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="ClientUsername" />
                            <span asp-validation-for="ClientUsername"></span>
