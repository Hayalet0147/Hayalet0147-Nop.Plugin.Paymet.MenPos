                    </div>

                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-label asp-for="ClientPassword" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="ClientPassword" />
                            <span asp-validation-for="ClientPassword"></span>
